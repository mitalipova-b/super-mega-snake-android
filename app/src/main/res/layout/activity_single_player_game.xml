<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SinglePlayerGameActivity">

    <ImageButton
        android:id="@+id/up_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:rotation="182"
        app:srcCompat="@drawable/down_button"
        tools:layout_editor_absoluteX="256dp"
        tools:layout_editor_absoluteY="567dp" />

    <ImageButton
        android:id="@+id/left_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:rotation="91"
        app:srcCompat="@drawable/down_button"
        tools:layout_editor_absoluteX="205dp"
        tools:layout_editor_absoluteY="607dp" />

    <ImageButton
        android:id="@+id/right_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:rotation="-91"
        app:srcCompat="@drawable/down_button"
        tools:layout_editor_absoluteX="305dp"
        tools:layout_editor_absoluteY="607dp" />

    <ImageView
        android:id="@+id/game_field"
        android:layout_width="353dp"
        android:layout_height="358dp"
        app:srcCompat="@drawable/game_field"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="180dp" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTint="#101010"
        android:fontFamily="@font/press_start_2p"
        android:scaleX="1.25"
        android:scaleY="1.25"
        android:text="SCORE : 3"
        android:textColor="#090909"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="130dp" />

    <ImageButton
        android:id="@+id/down_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        app:srcCompat="@drawable/down_button"
        tools:layout_editor_absoluteX="256dp"
        tools:layout_editor_absoluteY="637dp" />

    <ImageButton
        android:id="@+id/pause_button"
        android:layout_width="51dp"
        android:layout_height="43dp"
        android:backgroundTint="#00FFFFFF"
        app:srcCompat="@drawable/pause_button"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="38dp" />
</androidx.constraintlayout.widget.ConstraintLayout>